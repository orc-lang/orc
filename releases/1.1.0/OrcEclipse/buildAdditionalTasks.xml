<project name="OrcEclipse">
	<description>
		Ant build file with additional tasks for Orc Eclipse plug-in build.
	</description>
	<property file="build.properties" />

	<target name="copylib">
		<copy preservelastmodified="true" todir="lib" verbose="true">
			<fileset dir="${orc.location.OrcJava}/build" includes="orc-${orc.version}.jar"/>
		</copy>
	</target>

	<target name="copyuserguide">
		<copy preservelastmodified="true" todir="help/orcuserguide" verbose="true">
			<fileset dir="../Website/userguide/html"/>
		</copy>
	</target>
</project>
